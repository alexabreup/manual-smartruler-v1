---
// Script para definir tema escuro como padrão, mantendo opção de alternar
---

<script is:inline>
  // Executa imediatamente para evitar flash de tema claro
  (function() {
    const savedTheme = localStorage.getItem('theme');
    
    // Se não há preferência salva, define dark como padrão
    if (!savedTheme) {
      document.documentElement.setAttribute('data-theme', 'dark');
      localStorage.setItem('theme', 'dark');
    } 
    // Se está em modo 'auto', converte para dark
    else if (savedTheme === 'auto') {
      document.documentElement.setAttribute('data-theme', 'dark');
      localStorage.setItem('theme', 'dark');
    }
    // Se há tema explícito (light ou dark), aplica normalmente
    else {
      document.documentElement.setAttribute('data-theme', savedTheme);
    }
  })();
</script>
