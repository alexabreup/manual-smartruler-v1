---
// Script para definir tema escuro como padrão, mantendo opção de alternar
---

<script>
  // Define tema escuro como padrão, mas permite alternância
  if (typeof window !== 'undefined') {
    // Verifica se não há preferência salva
    const savedTheme = localStorage.getItem('theme');
    if (!savedTheme) {
      // Define o tema escuro como padrão apenas se não há preferência salva
      document.documentElement.setAttribute('data-theme', 'dark');
      localStorage.setItem('theme', 'dark');
    }
    
    // Aplica o tema salvo ou padrão
    const theme = savedTheme || 'dark';
    document.documentElement.setAttribute('data-theme', theme);
  }
</script>
